<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:fitsSystemWindows="true"
    tools:context=".ExchangeDetails">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_gravity="center"

        android:layout_height="match_parent">

    <TextView
        android:id="@+id/nav2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/scramble"
        android:padding="4dp"
        android:layout_marginTop="15dp"
        android:text="Country Currency Calculator"

        android:textColor="#ffffff"


        android:textSize="25dp"

        android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/sourceFlag"
            android:layout_marginTop="50dp"
            android:layout_width="160dp"
            android:layout_marginLeft="38dp"

            android:layout_height="115dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            />

        <ImageView
            android:id="@+id/destFlag"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"

            android:layout_width="160dp"
            android:layout_height="115dp"

            android:layout_gravity="center_vertical"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="40dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/sourceCountryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"


            android:text=" "

            android:textColor="#000000"


            android:textSize="25dp"

            android:textStyle="bold" />



        <TextView
            android:id="@+id/destCountryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginLeft="30dp"


            android:text=" "

            android:textColor="#000000"


            android:textSize="25dp"

            android:textStyle="bold" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="40dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/numberforCurr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"


            android:text=" "

            android:textColor="#000000"


            android:textSize="25dp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/SymbolCurr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"

            android:text=" " />


        <TextView
            android:id="@+id/numberforDest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginLeft="30dp"


            android:text=" "

            android:textColor="#000000"


            android:textSize="25dp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/SymbolDest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="20dp"

            android:text=" " />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>